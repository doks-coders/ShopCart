@page "/ProductDetails/{Id:int}"
@inherits ProductDetailsBase


@if (Product == null && ExceptionMessage == null)
{
	<LoadingSpinner />
}
else if (ExceptionMessage != null)
{
	<DisplayError ExceptionMessage="@ExceptionMessage"></DisplayError>
}
else
{
	<h3 class="mb-5">
		Product Details
	</h3>
	<div class="row">
		<div class="col-md-6 mb-4">
			<img class="img-fluid" src="images/image.jpeg" />
		</div>
		<div class="col-md-6">
			<h3>@Product.Name</h3>
			<p class="mb-4">@Product.Description</p>
			<p class="mb-4">
				<b>
					@Product.Price.ToString("c")&nbsp;(@Product.Qty items in stock)
				</b>
			</p>
			<button class="btn btn-primary" @onclick="()=>
				AddToCart_Click(
					new CartItemToAddDTO(){
					CartId = HardCoded.CartId,
					ProductId = Product.Id,
					Qty=1
					})">
				Add To Cart
			</button>
		</div>
	</div>
}
