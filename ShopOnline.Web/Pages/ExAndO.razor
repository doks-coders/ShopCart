@page "/ex"
@inherits ExAndOBase

@if(WinnerOfGame == null)
{
	<div style="display:flex;flex-wrap:wrap">

		@foreach (var cell in NumberOfCells)
		{
			<button class="btn btn-outline-dark"
					style="width:200px;height:200px;font-size:100px;flex-basis:33%"
					@onclick="()=>SubmitPoints(cell.Key)">
				@cell.Value
			</button>
		}

	</div>
}

@if(WinnerOfGame != null)
{
	<div style="height:100vh;width:100%;display:flex;flex-direction:column;justify-content:center;align-items:center">
		<h4>@WinnerOfGame</h4>
		<button class="btn btn-primary" @onclick="()=>InitialiseGame()">Replay Game</button>
	</div>
	
}




